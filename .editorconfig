# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{py,rst,ini}]
indent_size = 4

[*.py]
max_line_length=120
multi_line_output=3
default_section=THIRDPARTY

[*.{html,css,scss,json,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
